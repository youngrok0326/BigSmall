{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug train.py with Hydra",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/train.py",
      "console": "integratedTerminal",
      "args": [
        "hydra.run.dir=.",
        "wandb.enable=false"
      ],
      "env": {
        "CUDA_VISIBLE_DEVICES": "1",
        "WANDB_DISABLED": "true",
        "CUDA_LAUNCH_BLOCKING": "1"
      },
      "justMyCode": false,
      "subProcess": true
    },
    {
      "name": "UV: Debug evaluate-decode.py",
      "type": "python",
